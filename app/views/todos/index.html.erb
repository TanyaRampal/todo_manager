<article>
  <h1 class="TodoPage-title">My To-do List</h1>

  <%= form_with(url: "/todos", method: "post", class: "AddTodo") do %>
    <input type="text" name="todo_text" class="AddTodo-text" placeholder="What's next?" required/>
    <input type="date" name="due_date" class="AddTodo-date" required/>
    <input type="submit" class="AddTodo-button" value="Add" />
  <% end %>

  <!-- Section for Overdue -->
  <%= render partial: "todo-section", locals: {
               section_title: "Overdue",
               todos: Todo.overdue.not_completed,
               show_due_date: true,
             } %>
  <!-- End of Overdue -->

  <!-- Section for Due today -->
  <%= render partial: "todo-section", locals: {
               section_title: "Due Today",
               todos: Todo.due_today,
               show_due_date: false,
             } %>
  <!-- End of Due today -->

  <!-- Section for Due Later -->
  <%= render partial: "todo-section", locals: {
               section_title: "Due Later",
               todos: Todo.due_later,
               show_due_date: true,
             } %>
  <!-- End of Due Later -->
</article>
