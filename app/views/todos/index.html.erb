<article>
  <h1 class="TodoPage-title">My To-do List</h1>

  <%= form_with(url: "/todos", method: "post", class: "AddTodo") do %>
    <%= text_field_tag "todo_text", nil, placeholder: "What's next?", class: "AddTodo-text", required: true %>
    <%= date_field_tag "due_date", nil, class: "AddTodo-date", required: true %>
    <%= submit_tag "Add", class: "AddTodo-button" %>
  <% end %>

  <!-- Section for Overdue -->
  <%= render partial: "todo-section", locals: {
               section_title: "Overdue",
               todos: Todo.overdue.not_completed,
               show_due_date: true,
             } %>
  <!-- End of Overdue -->

  <!-- Section for Due today -->
  <%= render partial: "todo-section", locals: {
               section_title: "Due Today",
               todos: Todo.due_today,
               show_due_date: false,
             } %>
  <!-- End of Due today -->

  <!-- Section for Due Later -->
  <%= render partial: "todo-section", locals: {
               section_title: "Due Later",
               todos: Todo.due_later,
               show_due_date: true,
             } %>
  <!-- End of Due Later -->
</article>
